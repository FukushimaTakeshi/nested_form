<%= form_for @entry, :url => entry_confirm_path do |f| %>
  <div class="page-header">
    <h1>お問い合わせ</h1>
  </div>

  <% if @entry.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% sort_messages(@entry.errors.messages).each do |msg_key| %>
          <% @entry.errors.full_messages_for(msg_key).each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table">
    <tr>
      <th><%= f.label :name %></span></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :name_katakana %></span></th>
      <td><%= f.text_field :name_katakana %></td>
    </tr>
    <tr>
      <th><%= f.label :tel %></th>
      <td><%= f.text_field :tel %></td>
    </tr>
    <% @free_form.text.present? %>
      <% @free_form.text.each_with_index do |_, index| %>
        <tr>
          <th><%= @free_form.text[index][:comment] %></th>
          <td><%= f.text_area :"free_text_#{index}", size: "50x5" %></td>
        </tr>
      <% end %>
    <tr>
      <th><%= f.label :email %></th>
      <td><%= f.text_field :email %></td>
    </tr>
  </table>
  <%= f.submit '確認', class: 'btn btn-primary' %>
<% end %>
