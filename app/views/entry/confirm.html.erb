<%= form_for @entry, :url => entry_finish_path do |f| %>
  <dl class="table">
    <dt><%= f.label :name %></dt>
    <dd><%= @entry.name %></dd>
    <%= f.hidden_field :name %>

    <dt><%= f.label :name_katakana %></dt>
    <dd><%= @entry.name_katakana %></dd>
    <%= f.hidden_field :name_katakana %>

    <dt><%= f.label :tel %></dt>
    <dd><%= @entry.tel %></dd>
    <%= f.hidden_field :tel %>

    <dt><%= f.label :email %></dt>
    <dd><%= @entry.email %></dd>
    <%= f.hidden_field :email %>

    <%= f.fields_for :free_form do |text| %>
      <dt><%= @free_form.text[text.index][:comment] %></dt>
      <dd><%= @entry.free_form[text.index].free_texts %></dd>
      <%= text.hidden_field :free_texts %>
    <% end %>
  </dl>
  <%= f.submit '送信', :class => 'btn btn-primary' %>
<% end %>
